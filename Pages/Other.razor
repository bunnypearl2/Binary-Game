@*INPUT SELECTION ROW*@
<div class="row">

    @***INPUT BOX***@
    <div class="col-auto">
        <EditForm Model="@formData" OnValidSubmit="HandleSubmit">
            <div>
                <label for="firstinput">Input (max @numOfColumns characters) <br />Values above @(Math.Pow(2, numOfColumns) - 1) will not be accepted</label>
                <InputText id="firstinput" @bind-Value="formData.input" class="form-control" style="width: 16ch;" maxlength="16"/>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </EditForm>

        <p>Submitted Name: @inputString</p>
        <p>@errorMessage</p>
        @* <p>Decimal Value: @inputDecimal</p> *@
        @* <p>Twos Comp Decimal: @twosCompDecimal</p> *@
        @* <p>@testMessage</p> *@
    </div>

    @***MAIN DROPDOWN***@
    <div class="col-auto">
        <select @onchange="UpdateDropdown">
            @foreach (var option in options)
            {
                <option value="@option">@option</option>
            }
        </select>
        <p>Selected Base: @inputRadix</p>
    </div>


    @***TOGGLE BUTTON***@ 
    <div class="col-auto">

        <button @onclick="ToggleQuiz" class="@(isQuizzing ? "quiz-on" : "quiz-off")">
            @(isQuizzing ? "QUIZ ON" : "QUIZ OFF")
        </button>

        <p>Status: @(isQuizzing ? "Active" : "Inactive")</p>
    </div>

</div>
<!-- End INPUT SELECTION ROW-->



<!-- Begin body of page -->

<table>
    @for (int row = 0; row < numOfRows; row++)
    {


        <tr>
            @for (int col = numOfColumns-1; col >= 0; col--)
            {
                int i = row;
                int j = col;
                int index = i * numOfColumns + j; // Calculate the index based on row and column
                <td>

                    <input @ref="textBoxRefs[index]"
                    value="@textValues[i][j]"
                    @onclick="(e) => HandleInputClick(e, index)"
                    @oninput="(e) => MoveNext(e, i , j, index)"
                    @onkeyup="(e) => HandleKeyNavigation(e, i, j, index)"
                    
                    class="form-control text-center mx-1"
                    maxlength="1"
                    style="width: 50px; display: inline-block;" />
                </td>

            }

            @{
                int k = row;
                <td class="col-auto">
                    <select @bind:get="GetDropdownValue(k)" @bind:set="newValue => RowCalculation(k, newValue)">
                        @foreach (var option in options)
                        {
                            <option value="@option">@option</option>
                        }
                    </select>
                    <p>Selected Base: @rowRadix[k]</p>
                </td>

                <td>

                    <button @onclick="() => TwosComp(k)" class="@(isTwosComp[k] ? "toggle-on" : "toggle-off")">2's Comp'</button>
                </td>
            }



        </tr>
    }
</table>




