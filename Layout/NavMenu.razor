@inject NavigationManager NavManager
<button class="btn btn-primary" @onclick="ToggleDropdown">☰ My Binary Quizzes</button>

@if (isDropdownVisible)
{
    <ul class="list-group">
        <li class="list-group-item">
            <NavLink class="nav-link" href="/">Home</NavLink>
        </li>
        <li class="list-group-item">
            <NavLink class="nav-link" href="/counter">Counter</NavLink>
        </li>
        <li class="list-group-item">
            <NavLink class="nav-link" href="/other">Other</NavLink>
        </li>
    </ul>
}

@code {
    private bool isDropdownVisible = false;

    private void ToggleDropdown()
    {
        isDropdownVisible = !isDropdownVisible;
    }

     protected override void OnInitialized()
    {
        NavManager.LocationChanged += (sender, args) => CloseMenu();
    }

    private void CloseMenu()
    {
        isDropdownVisible = false;
        StateHasChanged();
    }
}

